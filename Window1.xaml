        <Button Content="Connect" HorizontalAlignment="Left" Height="22.91" Margin="192.667,22.254,0,0" VerticalAlignment="Top" Width="67.333" Click="Button1_Click"/>
        <Button Content="Close" HorizontalAlignment="Left" Height="22.91" Margin="270.333,22.254,0,0" VerticalAlignment="Top" Width="67.333" Click="Button2_Click"/>
        <Button Content="Send" HorizontalAlignment="Left" Height="22.91" Margin="531.333,22.254,0,0" VerticalAlignment="Top" Width="67.333" Click="Button3_Click"/>
        <TextBox x:Name="textBox3" Margin="0,58.657,20.333,10" TextWrapping="Wrap" HorizontalAlignment="Right" Width="88" BorderThickness="2"/>
    </Grid>
</Window>
